FROM node:16-alpine

RUN mkdir -p /app && chown -R node:node /app

ENV PATH /app/node_modules/.bin:$PATH

WORKDIR /app

COPY .env .env
COPY ./config ./config
COPY ./test ./test
COPY ./services/auths/middlewares/auth.middleware.js ./services/auths/middlewares/auth.middleware.js
COPY jsconfig.json jsconfig.json
COPY jest.config.json jest.config.json
COPY package.json package.json
COPY yarn.lock yarn.lock
COPY index.micro.js index.micro.js

COPY ./services/users ./services/users
COPY ./services/users/route.js ./route.js
RUN rm -rf ./services/users/route.js

RUN yarn install

EXPOSE 5000

RUN yarn test test/healthcheck.micro.test.js
CMD ["node", "index.micro.js"]

