FROM node:16-alpine

RUN mkdir -p /app && chown -R node:node /app

ENV PATH /app/node_modules/.bin:$PATH

WORKDIR /app

COPY . .
RUN find index.* -maxdepth 0 -name 'index.micro.js' -prune -o -exec rm -rf '{}' ';'

COPY ./services/users/route.js ./route.js
RUN find ./services/* -maxdepth 0 -name 'users' -prune -o -exec rm -rf '{}' ';'

RUN yarn install

EXPOSE 5000

RUN yarn test test/healthcheck.micro.test.js
CMD ["node", "index.micro.js"]

